doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='app.css', media='all')

    body
        each game in data
            .game
                h1
                    span=game.title
                    span.subtitle=' (' + game.year + ' â€” ' + game.platform.toUpperCase() + ')'
                .characters
                    each character, characterName in game.characters
                        .character
                            div=characterName
                            div
                                i(class=character.age + character.sex)
                                i(class=character.role)
                .metrics
                    .sexes
                        i.male
                        .mtext=game.metrics.sexes.malePercent
                        .ratio
                            .mratio(style='width:' + game.metrics.sexes.malePercent)
                            .uratio(style='width:' + game.metrics.sexes.unknownPercent)
                            .fratio(style='width: ' + game.metrics.sexes.femalePercent)
                        .ftext=game.metrics.sexes.femalePercent
                        i.female
