
include games/platform

doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width,minimum-scale=1,initial-scale=1')
        meta(property='og:type', content='website')
        meta(property='og:site_name', content='JRPG Demographics')
        meta(property='og:title', content='JRPG Demographics')
        meta(property='og:description', content='A site dedicated to showing the gender, age, and role breakdowns of Japanese role playing games')
        meta(property='og:image', content='https://cdn.jsdelivr.net/emojione/assets/png/1f57a.png?v=2.2.4')
        meta(property='og:url', content='https://jasonrose.github.io/jrpg-demographics')
        link(rel='canonical', href='https://jasonrose.github.io/jrpg-demographics')
        link(rel='icon', type='image/png', href='https://cdn.jsdelivr.net/emojione/assets/png/1f57a.png?v=2.2.4')
        link(rel='stylesheet', href='app.css', media='all')

    body
        each platform in data
            +platform(platform)

