include metrics/sexes
include metrics/roles

doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(property='og:type', content='website')
        meta(property='og:site_name', content='JRPG Demographics')
        meta(property='og:title', content='JRPG Demographics')
        meta(property='og:description', content='A site dedicated to showing the gender, age, and role breakdowns of Japanese role playing games')
        meta(property='og:image', content='http://cdn.jsdelivr.net/emojione/assets/png/1f57a.png?v=2.2.4')
        meta(property='og:url', content='http://jasonrose.github.io/jrpg-demographics')
        link(rel='stylesheet', href='app.css', media='all')

    body
        each platform in data
            .platform
                h1
                    span=platform.title.toUpperCase()
                    span.subtitle=' (' + platform.startYear + '–' + platform.endYear + ')'
                .metrics
                    +sexes(platform.metrics.sexes)
                    +roles(platform.metrics.roles)
                each game in platform.games
                    .game
                        h1
                            span=game.title
                            span.subtitle=' (' + game.year + ', ' + game.platform.toUpperCase() + ')'
                        .characters
                            each character, characterName in game.characters
                                .character
                                    div=characterName
                                    div
                                        i(class=character.age + character.sex)
                                        i(class=character.role)
                        .metrics
                            +sexes(game.metrics.sexes)
                            
        footer
            | © 2016 Jason Rose. Emoji provided free by
            =" "
            a(href='http://emojione.com') EmojiOne
