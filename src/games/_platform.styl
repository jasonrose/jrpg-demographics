.platform
  background white
  margin-bottom 2rem

  > h1
    font-size 1.75rem
    font-weight bold
    margin-bottom 2rem

  > .metrics
    border-bottom .5rem solid #999
    width 100%
    &:after
      clear both
      content ''
      display table

  .metrics_grid
    float left

.game
  border 0 solid #999
  border-bottom-width .25rem
  margin-bottom 1rem
  max-width 960px
  padding 1rem .5rem
  width 100%

  &:last-of-type {
    border-bottom 0
  }

  h2
    font-size 1.25rem
    font-weight 900
    margin-bottom 2rem

.game_header
  margin-bottom 1rem

.subtitle
  color #777
  display block
  font-size 1rem
  font-weight 500
  margin-top .25rem

.characters:after
  clear both
  content ''
  display table

.character
  float left
  height 16px + 5px + $tile_dimension
  margin-bottom 1rem
  position relative
  text-align center
  width 33%

  &::before
  &::after
    content ''
    display block
    height $tile_dimension
    left 50%
    margin-left -($tile_dimension) - 5px
    position absolute
    top 21px
    width $tile_dimension

  &::after
    margin-left 5px
