.sexes
  align-items stretch
  display flex

  .mratio
    background $color_purple
    text-align left
    padding-left .5rem

  .fratio,
  .ratio
    background $color_red
    color white

  .fratio
    padding-right .5rem
    text-align right

  .uratio
    background $color_gold

  .mratio,
  .fratio,
  .uratio
    float left
    line-height $tile_dimension + 10px
    height $tile_dimension + 10px

  .ratio
    flex 1

.roles
  align-items flex-end
  display flex
  flex-flow row
  height 100px

  .entry
    align-items center
    justify-content flex-end
    display flex
    flex 1
    flex-flow column
    height 100%
    padding 0 5px
    text-align center

    .bar
      background $color_cyan
      margin-top .25rem
      min-height .25rem
      width 100%
