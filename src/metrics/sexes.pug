mixin sexes(metric)
  figure.metric.sexes
    i.male
    .ratio
      .mratio(class='width_' + metric.malePercent)=metric.malePercent + '%'
        span.hidden=' male'
      .uratio(class='width_' + metric.unknownPercent)
        span.hidden=metric.unknownPercent + '% unknown sex'
      .fratio(class='width_' + metric.femalePercent)=metric.femalePercent + '%'
        span.hidden=' female'
    i.female
    