@import 'node_modules/reset-css/reset.css'

html
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  font-size 16px
  -webkit-overflow-scrolling touch
  box-sizing border-box
  
*, *:before, *:after
  box-sizing inherit

$tile_dimension = 32px

body
  display flex
  flex-flow row wrap
  justify-content stretch

.game
  align-content flex-start
  border 0 solid black
  border-bottom-width 4px
  display flex
  flex 1
  flex-flow row wrap
  max-width 500px
  min-width 320px
  padding .5rem 1rem

h1
  flex 0 1 100%
  font-size 1.5rem
  font-weight bold
  margin-bottom 5rem
  
  span
    display block

  .subtitle
    color #777
    font-size 1.1rem
    margin-top .25rem

.character
  margin-bottom 1rem
  min-width 90px
  text-align center
  width 33%

i
  cursor pointer
  display inline-block
  height $tile_dimension
  margin 5px
  position relative
  text-align center
  vertical-align top
  width $tile_dimension
  
  &:hover
    &:before, &:after
      background white
      border 1px solid black
      display block
      left 50%
      position absolute
      top $tile_dimension + 10px
      
    &:before
      border-right 0
      border-bottom 0
      content ''
      height 8px
      transform translate(-50%, -50%) rotate(45deg)
      width 8px
      z-index 2
      
    &:after
      border-radius 3px
      height auto
      max-width 90px
      padding 5px
      transform translateX(-50%) 
      z-index 1

tile(url, tooltip)
  background url(url) no-repeat center / contain
  
  &:hover:after
    content tooltip

