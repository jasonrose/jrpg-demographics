html
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  font-size 16px
  -webkit-overflow-scrolling touch

$tile_dimension = 32px

.game
  display flex
  flex-flow row wrap
  margin-bottom .5rem
  padding .5rem

h1
  flex 0 1 100%
  font-size 1.5rem
  font-weight bold
  margin-bottom 1rem

  .subtitle
    font-size 1.1rem
    color #777

.character
  margin-bottom 1rem
  min-width 90px
  text-align center

i
  cursor pointer
  display inline-block
  height $tile_dimension
  margin 5px
  position relative
  text-align center
  vertical-align top
  width $tile_dimension

  &:before
    display block
    font-size $tile_dimension - 4px
    line-height $tile_dimension + 10px

  &:hover:after
    $width = 80px
    background white
    border 1px solid black
    border-radius 3px
    display block
    height auto
    left (($width / -2 - 5px) + ($tile_dimension / 2))
    padding 5px
    position absolute
    top $tile_dimension + 10px
    width $width
    z-index 1

tile(url, tooltip)
  background url(url) no-repeat center center
  background-size contain
  
  &:hover:after
    content tooltip

