  display flex

  .mratio
    background mediumpurple
    text-align left
    padding-left .5rem

  .fratio,
  .ratio
    background orangered
    color white

  .fratio
    padding-right .5rem
    text-align right

  .uratio
    background gold

  .mratio,
  .fratio,
  .uratio
    float left
    line-height $tile_dimension + 10px
    height $tile_dimension + 10px

  .ratio
    flex 1


@media only screen and (max-width 715px)
  .game
    flex-flow column nowrap
    justify-content center

  .metrics
    margin-bottom 1.5rem
    order 1

  .characters
    order 2

@media only screen
  .character
    width 33%

@media only screen and (min-width 450px)
  .character
    width 25%

@media only screen and (min-width 560px) and (max-width 715px)
  .character
    width 20%

@media only screen and (min-width 716px)
  h1
    flex 0 1 100vw

  .metrics
    width 320px - 16px * 2

@media only screen and (min-width 810px)
  .character
    width 20%
