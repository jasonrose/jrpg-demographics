@import 'node_modules/reset-css/reset.css'

$tile_dimension = 32px

$color_cyan = rgba(106, 218, 197, 1)
$color_gold = rgba(255, 229, 77, 1)
$color_magenta = rgba(255, 115, 192, 1)
$color_purple = rgba(194, 143, 239, 1)
$color_red = rgba(255, 72, 72, 1)
$color_blue = rgba(66, 139, 193, 1)

@import './mixins/_mixins'

@import './metrics/_metrics'
@import './games/_platform'

html
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  font-size 16px
  -webkit-overflow-scrolling touch
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

.hidden
  display none

a,
a:hover,
a:active,
a:visited,
a:focus
  color black
  outline 0
  text-decoration none

body
  background linear-gradient(to bottom, $color_blue, lighten($color_blue, 50%))

.body
  margin auto
  max-width 960px
  width 100%

i
  cursor pointer
  display inline-block
  height $tile_dimension
  margin 5px
  min-height $tile_dimension
  position relative
  text-align center
  vertical-align top
  width $tile_dimension

  &:hover
    &:before, &:after
      background white
      border 1px solid black
      display block
      left 50%
      position absolute
      top $tile_dimension + 10px

    &:before
      border-right 0
      border-bottom 0
      content ''
      height 8px
      transform translate(-50%, -50%) rotate(45deg)
      width 8px
      z-index 2

    &:after
      border-radius 3px
      height auto
      max-width 90px
      padding 5px
      transform translateX(-50%)
      z-index 1

