@import 'node_modules/reset-css/reset.css'

html
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  font-size 16px
  -webkit-overflow-scrolling touch
  box-sizing border-box

*, *:before, *:after
  box-sizing inherit

$tile_dimension = 32px

body
  margin auto
  max-width 960px
  width 100%

.game
  border 0 solid black
  border-bottom-width 4px
  display flex
  flex-flow row wrap
  max-width 960px
  padding 1rem
  width 100%

h1
  font-size 1.5rem
  font-weight bold
  margin-bottom 2rem

  span
    display block

  .subtitle
    color #777
    font-size 1.1rem
    margin-top .25rem

.characters
  align-content flex-start
  display flex
  flex 1
  flex-flow row wrap

.character
  margin-bottom 1rem
  text-align center
  min-width 95px

.metrics
  width 100%

i
  cursor pointer
  display inline-block
  height $tile_dimension
  margin 5px
  position relative
  text-align center
  vertical-align top
  width $tile_dimension

  &:hover
    &:before, &:after
      background white
      border 1px solid black
      display block
      left 50%
      position absolute
      top $tile_dimension + 10px

    &:before
      border-right 0
      border-bottom 0
      content ''
      height 8px
      transform translate(-50%, -50%) rotate(45deg)
      width 8px
      z-index 2

    &:after
      border-radius 3px
      height auto
      max-width 90px
      padding 5px
      transform translateX(-50%)
      z-index 1

tile(url, tooltip)
  background url(url) no-repeat center / contain

  &:hover:after
    content tooltip

