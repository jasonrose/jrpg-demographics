header
  background white
  margin-bottom 2rem

  > h1
    font-size 3rem
    font-weight 700
    line-height 1.5em
    text-align center

  > h2
    font-size 1.5rem
    font-weight 500
    line-height 1.5rem
    margin-bottom 1rem

  > .subheading
    border-bottom .5rem solid #999
    font-size 2rem
    font-weight 500
    line-height 1.5em
    margin-bottom 2rem
    padding-bottom 1rem
    text-align center

  .roles,
  .ages
    border-bottom .25rem solid #999
    display block
    margin-bottom 2rem
    padding-bottom 1rem

    &.roles
      i
        display block
        margin 5px auto

    &:last-of-type
      border-bottom 0
      margin-bottom 0
      padding-bottom 0
    
    td
      min-width ($tile_dimension * 2 + 10px * 2 + 10px)
      padding 0 10px 10px 0
      vertical-align middle

    .um
      display block
      margin 5px auto

  > nav
    border-bottom .5rem solid #999
    margin-bottom 2rem
    padding-bottom 1rem 
    text-align center

    > h2
      margin-bottom 1rem

    .nav_item
      background $color_blue
      border-radius 5px
      color white
      display inline-block
      margin 0 .5rem
      padding .5rem 1rem

      &:hover
        background darken($color_blue, 10)

footer
  font-size .6rem
  padding-bottom 2rem
  text-align center

@media only screen and (max-width 715px)
  .game
    flex-flow column nowrap
    justify-content center

  .metrics
    order 1

  .metric
    margin-bottom 1.5rem

  .metrics_grid
    margin-bottom 0
    width 100%

  .characters
    order 2

  header
  .platform
    padding 1rem .5rem

  header
    > h1
      font-size 1.75rem

    > .subheading
      font-size 1.25rem

@media only screen
  .character
    width 33%

@media only screen and (min-width 450px)
  .character
    width 25%

@media only screen and (min-width 560px) and (max-width 715px)
  .character
    width 20%

@media only screen and (min-width 716px)
  .platform h2
    flex 0 1 100vw

  .metrics,
  .platform > .metrics .metric
    width 320px - 16px * 2

  .metrics_grid + .metrics_grid
    margin-left 2rem

  header,
  .platform
    padding 1.5rem

  .characters
    flex 1

  .character
    width 33%

@media only screen and (min-width 750px)
  .character
    width 25%

@media only screen and (min-width 850px)
  .character
    width 20%
