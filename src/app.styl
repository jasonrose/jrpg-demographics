footer
  font-size .6rem
  padding-bottom 2rem
  text-align center

@media only screen and (max-width 715px)
  .game
    flex-flow column nowrap
    justify-content center

  .metrics
    order 1

  .metric
    margin-bottom 1.5rem

  .metrics_grid
    margin-bottom 0

  .characters
    order 2

  .platform
    padding 1rem .5rem

@media only screen
  .character
    width 33%

@media only screen and (min-width 450px)
  .character
    width 25%

@media only screen and (min-width 560px) and (max-width 715px)
  .character
    width 20%

@media only screen and (min-width 716px)
  h1
    flex 0 1 100vw

  .metrics,
  .platform > .metrics .metric
    width 320px - 16px * 2

  .metrics_grid + .metrics_grid
    margin-left 2rem

  .platform
    padding 1.5rem

  .characters
    flex 1

  .character
    width 33%

@media only screen and (min-width 750px)
  .character
    width 25%

@media only screen and (min-width 850px)
  .character
    width 20%
