@import 'node_modules/reset-css/reset.css'

html
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

$tile_dimension = 30px

.game
  display flex
  flex-flow row wrap
  margin-bottom 20px

h1
  font-size 1.5rem
  flex 0 1 100%
  margin-bottom 1rem

.character
  margin-bottom .5rem
  width 100px

i
  cursor pointer
  display inline-block
  height $tile_dimension
  position relative
  text-align center
  vertical-align top
  width $tile_dimension

  &:before
    display block
    font-size $tile_dimension - 4px
    line-height $tile_dimension

  &:hover:after
    $width = 80px
    background white
    border 1px solid black
    border-radius 3px
    display block
    height auto
    left (($width / -2 - 5px) + ($tile_dimension / 2))
    padding 5px
    position absolute
    top $tile_dimension
    width $width

tile(content, tooltip)
  &:before
    content content
  &:hover:after
    content tooltip

