@media only screen and (max-width: 639px)
  .game
    border-left 0
    border-right 0
    margin-left auto
    margin-right auto 
    width 100%

@media only screen and (min-width: 640px)
  body
    margin auto
    max-width 960px
    width 100%
    
  .game
    &:nth-child(2n + 1)
      border-width 0 1px 4px 4px
      
    &:nth-child(2n - 1)
      border-width 0 3px 4px 3px
    
    &:nth-child(2n)
      border-width 0 4px 4px 1px
      
    &:last-of-type&:nth-child(2n - 1)
      border-width 0 4px 4px 4px
      max-width 100%

@media only screen and (min-width: 961px) 
  .game
    &:nth-child(3n + 1)
      border-width 0 1px 4px 4px
      
    &:nth-child(3n - 1)
      border-width 0 3px 4px 3px
    
    &:nth-child(3n)
      border-width 0 4px 4px 1px
      
    &:last-of-type&:nth-child(3n -1), &:last-of-type&:nth-child(3n + 1)
      border-width 0 4px 4px 4px
